@model List<DempProect.Models.Student>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h3 class="display-4">Welcome</h3>
</div>

<div class="text-body">
    <a class="btn btn-success" href="student/AddStudent"> Add New Students Info</a>
    <br/><h3>Students Informations:</h3>
    <div class="table">
        <table class="table table-striped">
            <thead class="text-center">
                <tr >
                    <th scope="col">Name</th>
                    <th scope="col">Class</th>
                    <th scope="col">DOB</th>
                    <th scope="col">Gender</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody class="text-center">
                @foreach(var student in Model)
                {
                    <tr>
                        <td>@student.Name</td>
                        <td>
                            @if (@student.ClassId == 1) {<span>One</span>}
                            else if (@student.ClassId == 2) {<span>Two</span> }
                            else if (@student.ClassId == 3) {<span>Three</span> }
                            else if (@student.ClassId == 4) {<span>Four</span> }
                            else if (@student.ClassId == 5) {<span>Five</span> }
                            else if (@student.ClassId == 6) {<span>Six</span> }
                            else if (@student.ClassId == 7) {<span>Seven</span> }
                            else if (@student.ClassId == 8) {<span>Eight</span> }
                            else if (@student.ClassId == 9) {<span>Nine</span> }
                            else if (@student.ClassId == 10) {<span>Ten</span> }
                            else if (@student.ClassId == 11) {<span>Eleven</span> }
                            else if (@student.ClassId == 12) {<span>Twelve</span> }
                            else {}
                        </td>
                        <td>@student.DOB.ToString("dd-MM-yyyy")</td>
                        <td>
                            @if (@student.Gender == 1)
                            {
                                <span>Male</span>
                            }
                            else
                            {
                                <span>Female</span>
                            }
                        </td>
                        <td>
                            <a class="btn btn-dark" href="/Student/EditStudent/@student.Id">Edit</a>
                            <a class="btn btn-success" href="/Student/Details/@student.Id">Details</a>
                            <a class="btn btn-danger" href="/Student/DeleteStudent/@student.Id">Delete</a>
                        </td>

                    </tr>

                }
            </tbody>
        </table>
    </div>

</div>

